{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/screens.schema.json",
  "title": "Point-and-Click Screen Graph Schema",
  "type": "object",
  "required": ["screens"],
  "additionalProperties": false,

  "properties": {
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "base_scene", "state"],
        "properties": {
          "id": { "type": "string" },
          "base_scene": { "type": "string" },
          "state": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": true
      }
    },

    "screens": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/screen"
      }
    }
  },

  "$defs": {
    "screen": {
      "type": "object",
      "required": [
        "id",
        "name",
        "category",
        "importance",
        "art",
        "elements",
        "connections"
      ],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]+-[0-9]{2}$"
        },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "importance": { "type": "number" },

        "art": {
          "type": "object",
          "required": ["shot_type", "camera", "lighting", "composition"],
          "properties": {
            "shot_type": { "type": "string" },
            "camera": { "type": "string" },
            "lighting": { "type": "string" },
            "composition": { "type": "string" }
          },
          "additionalProperties": true
        },

        "elements": {
          "type": "array",
          "items": { "type": "string" }
        },

        "key_props": {
          "type": "array",
          "items": { "type": "string" }
        },

        "hotspots": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "readability": { "type": "string" }
            },
            "additionalProperties": true
          }
        },

        "connections": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["to", "direction", "transition"],
            "properties": {
              "to": { "type": "string" },
              "direction": { "type": "string" },
              "transition": { "type": "string" },
              "continuity": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": true
          }
        }
      }
    }
  }
}
