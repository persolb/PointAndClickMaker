            {
              "id": "LEAVE_DECK",
              "text": "(leave) Left to Observation Deck.",
              "next": "END_TO_DECK"
            }
          ]
        },
        {
          "id": "COMMIT_PROMPT",
          "type": "player_choice",
          "speakerId": "PLAYER",
          "text": "Records is locked. I\u2019ll route around it.",
          "choices": [
            {
              "id": "USE_LOG",
              "text": "(use) Log Records as inaccessible and proceed via tube/fire escalation language.",
              "next": "COMMIT_NARR1"
            },
            {
              "id": "LEAVE_NOT_NOW",
              "text": "(leave) Do nothing for now.",
              "next": "MAIN_MENU"
