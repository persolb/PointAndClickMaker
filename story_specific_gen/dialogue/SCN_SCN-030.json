        },
        {
          "id": "N041_SERVICE_NARR",
          "type": "npc_line",
          "speakerId": "NARRATOR",
          "text": "You key in numbers the machine should not accept from you. It accepts them anyway.\n\nThe display adds \u201cCONFIRMATION: ON\u201d like it\u2019s a moral stance.",
          "next": "N042_AFTER_SERVICE_MENU"
        },
        {
          "id": "N042_AFTER_SERVICE_MENU",
          "type": "player_choice",
          "speakerId": "PLAYER",
          "choices": [
            {
              "id": "C_USE_FAX_FROM_SERVICE",
              "text": "use: Fax the waiver template to OLEA Legal for signature.",
              "effects": [
                {
                  "key": "paperwork.trainingWaiverFaxed",
                  "action": "set",
                  "value": true
                }
              ],
              "next": "N020_SEND_PLAYER"
            },
            {
              "id": "C_LOOK_TEMPLATE_FROM_SERVICE",
              "text": "look: Read the template language again.",
